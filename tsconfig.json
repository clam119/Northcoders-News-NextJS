{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@pages": ["pages/*"],
      "@lib/*": ["lib/*"],
      "@db/*": ["db/*"],
      "@controllers": ["controllers/*"],
      "@model*": ["models/*"],
      "@public": ["public/*"]
    },
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "./pages/api/**/**.ts", "pages/api/users/index.ts", "pages/**/*", "."],
  "exclude": ["node_modules"]
}
